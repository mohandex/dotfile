[module/release]
type = custom/script
;inherit = generic-format-style
;exec = (lsb_release -d | awk {'print $2'} ; echo " "; lsb_release -r | awk {'print $2 '}) | tr -d '\n'
;exec = (lsb_release -r | awk {'print $2'} ; echo " " ) | tr -d '\n'
;interval = 6000
format-underline = ${colors.active}

[module/ping]
type = custom/script
;inherit = generic-format-style

exec = $HOME/.config/polybar/modules/measure_ping.py

tail = true

click-left = kill -USR1 %pid%

format-prefix = "  "
format-prefix-foreground = #8C736C
format-underline = ${colors.active}

