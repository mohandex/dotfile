[module/hostname]
type = custom/script
interval = 256
format = "<label> "
format-prefix = "   "
format-prefix-foreground = #f00060
format-padding = 0
exec =echo "$(uname -n)"

[module/uptime]
type = custom/script
exec = uptime|awk '{print $2 " " $3 " " $4 " " $5 " " $6}'|cut -d ',' -f -2
interval = 6
;format-prefix-foreground = ${colors.error}
format-foreground = ${colors.foreground}
format-padding = 1
format-underline = #343435

[module/update]
type = custom/script
exec =~/.config/polybar/modules/apt.sh
