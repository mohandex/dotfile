[module/ip]
type = custom/script
interval = 2
format = "<label>"
format-prefix = " "
format-prefix-foreground = #8C736C
format-padding = 1
exec =echo "$(wget -qO- https://canihazip.com/s | sed -e 's/[^[:digit:]\|.]//g')"
exec-if = ping -c 1 debian.org
format-underline = ${colors.secondary}
;format-background = #3C424D

[module/netstat]
